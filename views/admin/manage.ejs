<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Yika - <%= title %></title>
    <% include ../public/head %>
    <!-- Custom styles for this template -->
    <link href="/stylesheets/admin.css" rel="stylesheet">
  </head>

  <body>

    <% include ./public/header%>

    <div class="container-fluid">
      <div class="row">
        <% include ./public/sidebar%>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <h1 class="page-header"><%= title %></h1>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>标题</th>
                <th>
                  类型
                  <select name="type" id="type">
                    <option value="main">main</option>
                    <option value="Node">Node</option>
                    <option value="Express">Express</option>
                    <option value="Ejs">Ejs</option>
                    <option value="MongoDB">MongoDB</option>
                  </select>
                </th>
                <th>
                  发布时间
                  <select name="type" id="type">
                    <option value="main">从旧到新</option>
                    <option value="Node">从新到旧</option>
                  </select>
                </th>
                <th>阅读量</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i = 0, len = articleTitles.length; i < len; i++){ %>
              <tr>
                <td><a href="#"><%= articleTitles[i] %></a></td>
                <td><%= types[i] %></td>
                <td><%= pubTimes[i] %></td>
                <td>阅读量(20)</td>
                <td>
                  <a class="btn btn-info btn-sm" href=<%= modify_hrefs[i] %>
                  >修改文章</a>
                  <a class="btn btn-danger btn-sm" href=<%= delete_hrefs[i] %>
                  >删除文章</a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
  <script src="/jquery/dist/jquery.min.js"></script>
  <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
  </body>
</html>
