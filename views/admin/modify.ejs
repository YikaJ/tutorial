<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Yika - <%= title %></title>
    <% include ../public/head %>
    <!-- Custom styles for this template -->
    <link href="/stylesheets/admin.css" rel="stylesheet">
  </head>

  <body>

    <% include ./public/header%>

    <div class="container-fluid">
      <div class="row">
        <% include ./public/sidebar%>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <h1 class="page-header"><%= title %></h1>
          <form id="messageBorad" class="form-horizontal" method="post" role="form">
            <div class="form-group">
              <% if(locals.success){ %>
              <div class="col-sm-8 alert alert-success"><%= locals.success %></div>
              <% } %>
              <% if(locals.error){ %>
              <div class="col-sm-8 alert alert-danger"><%= locals.error %></div>
              <% } %>
              <div class="col-sm-8">
                <input type="text" name="title" class="form-control" id="title" placeholder="文章标题" required="required" value=<%= locals.form.articleTitle %>>
              </div>
              <label for="title" class="col-sm-4 control-label">
            </div>
            <div class="form-group">
              <div class="col-sm-8">
                <select class="form-control" name="type" id="type">
                  <option value="main" <% if(locals.form.type === "main"){ %> selected <% } %>>前言</option>
                  <option value="Node" <% if(locals.form.type === "Node"){ %> selected <% } %>>Node</option>
                  <option value="Express" <% if(locals.form.type === "Express"){ %> selected <% } %>>Express</option>
                  <option value="Ejs" <% if(locals.form.type === "Ejs"){ %> selected <% } %>>Ejs</option>
                  <option value="MongoDB" <% if(locals.form.type === "MongoDB"){ %> selected <% } %>>MongoDB</option>
                </select>
              </div>
              <label for="email" class="col-sm-4 control-label">
            </div>
            <div class="form-group">
              <div class="col-sm-8">
                <textarea name="article" id="article" class="form-control" rows="10" style="resize: none" placeholder="请使用Markdown语法编辑" required="required"><%= locals.form.article %></textarea>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <button type="submit" class="btn btn-default"> 保存修改 </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
  <script src="/jquery/dist/jquery.min.js"></script>
  <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
  </body>
</html>
