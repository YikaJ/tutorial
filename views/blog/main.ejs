<!DOCTYPE html>
<html>
<head>
	<title>YikaJ - <%= title %></title>
	<link rel="stylesheet" href="">
	<% include ../public/head %>
  <link rel="stylesheet" href="/stylesheets/blog.css">
</head>
<body>
	 <% include ../public/header%>
    <div class="container">
      <% include ./public/blogHeader %>
      <div class="row">
        <div class="col-sm-8 blog-main">
          <div class="blog-post">
            <h2><%= articleTitle %></h2>
            <h5 class="blog-post-meta"><%= pubTime %> by
            <a href="http://www.cnblogs.com/YikaJ/">
              YikaJ
            </a>
            </h5>
            <%- article %>
            <hr>
            <nav>
              <ul class="pager">
                <li>
                    <% if(prePage){ %>
                    <a href=<%= prePage %>>上一篇</a>
                    <% }else{ %>
                    <a>第一篇</a>
                    <% } %>
                </li>
                <li class="pull-right">
                    <% if(nextPage){ %>
                    <a href=<%= nextPage %>>下一篇</a>
                    <% }else{ %>
                    <a>最后一篇</a>
                    <% } %>
                </li>
              </ul>
            </nav>
          </div>
          <!--留言板模块-->
          <% if(articleTitle !== "尚未添加"){ %>
            <% include ./public/messageBorad %>
          <% } %>
          <h3 class="commandTitle">评论列表</h3>
          <% for(var i = 0, len = command.length; i < len; i++){ %>
          <div class="command">
            <div>
              <div class="commandInfo">
                <span>#<%= i %>条 </span>
                <span class="time"><%= command[i].time %></span>
                <span> By <%= command[i].name %> </span>
                <!-- 判断是否为管理员登录该网站 -->
                <% if(locals.user){ %>
                  <a href="javascript:" class="pull-right">删除</a>
                <% } %>
              </div>
              <p class="commandContent">
                <%= command[i].content %>
              </p>
            </div>
          </div>
          <% } %>
        </div>
          <!--侧边栏模块-->
        <% include ./public/blogSidebar %>
      </div>
      <% include ../public/footer %>
    </div>
    <script src="/jquery/dist/jquery.min.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/javascripts/blog.js"></script>
</body>
</html>