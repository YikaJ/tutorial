<form id="messageBorad" class="form-horizontal" role="form" method="post" action=<%= "/tutorials/command?page=" + page %>>
	<legend class="h3">可以留下您的评论</legend>
  <div class="form-group">
    <div class="col-sm-8">
      <input type="text" name="name" class="form-control" id="name" placeholder="您的昵称" required="required">
    </div>
    <label for="name" class="col-sm-4 control-label"><-- 昵称（<small class="text-danger">*必填</small>）</label>
  </div>
  <div class="form-group">
    <div class="col-sm-8">
      <input type="email" name="email" class="form-control" id="email" placeholder="您的邮箱">
    </div>
    <label for="email" class="col-sm-4 control-label"><-- 邮箱（<small>不会公开</small>）</label>
  </div>
  <div class="form-group">
  	<div class="col-sm-8">
  		<textarea name="content" id="content" class="form-control" rows="10" style="resize: none" placeholder="我会感谢你的每一条评论" required="required"></textarea>
  	</div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <input  class="btn btn-default" id="command" type="submit" value="发表评论">
    </div>
  </div>
</form>
